<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/nav_graph"
    app:startDestination="@id/todoListFragment">

    <fragment
        android:id="@+id/todoListFragment"
        android:name="cmps312.lab.todoapplication.TodoListFragment"
        android:label="fragment_todo_list"
        tools:layout="@layout/fragment_todo_list" >
        <action
            android:id="@+id/toUpdateTodoFragment"
            app:destination="@id/updateTodoFragment" />
        <action
            android:id="@+id/toAddTodoFragment"
            app:destination="@id/addTodoFragment" />
    </fragment>
    <fragment
        android:id="@+id/addTodoFragment"
        android:name="cmps312.lab.todoapplication.AddTodoFragment"
        android:label="fragment_add_todo"
        tools:layout="@layout/fragment_add_todo" />
    <fragment
        android:id="@+id/updateTodoFragment"
        android:name="cmps312.lab.todoapplication.UpdateTodoFragment"
        android:label="fragment_update_todo"
        tools:layout="@layout/fragment_update_todo" />
</navigation>